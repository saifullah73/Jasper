<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/mainActivityPrimaryColor</item>
        <item name="colorPrimaryDark">@color/mainActivityPrimaryDarkColor</item>
        <item name="colorAccent">@color/mainActivityAccentColor</item>
    </style>

    <style name="checkBoxStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/chatActivityAccentColor</item>
        <item name="android:textColorSecondary">@color/lesserwhite</item>
    </style>

    <style name="rippleStyle" parent="mainActivityStyle">
        <item name="colorPrimaryDark">#fff</item>
        <item name="colorPrimary">#fff</item>
    </style>

    <style name="mainActivityStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/mainActivityPrimaryColor</item>
        <item name="colorPrimaryDark">@color/mainActivityPrimaryDarkColor</item>
        <item name="colorAccent">@color/mainActivityAccentColor</item>
    </style>

    <style name="ContactFragmentStyle" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorAccent">@color/mainActivityTabIndicatorColor</item>
    </style>

    <!-- About Activity Progress bar Style -->
    <style name="chatActivityProgressStyle" parent="mainActivityStyle">
        <item name="colorPrimary">@color/mainActivityPrimaryColor</item>
        <item name="colorPrimaryDark">@color/mainActivityPrimaryDarkColor</item>
        <item name="colorAccent">@color/chatActivityMainlayoutBackgroundColor</item>
    </style>

    <style name="chatActivityStyle" parent="mainActivityStyle">
        <item name="colorPrimary">@color/chatActivityPrimaryColor</item>
        <item name="colorPrimaryDark">@color/chatActivityPrimaryDarkColor</item>
        <item name="colorAccent">@color/chatActivityAccentColor</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="tabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/mainActivityTabIndicatorColor</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">6dp</item>
        <item name="tabPaddingEnd">6dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <!--        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>-->
    </style>

</resources>
