<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jasper">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.Signup"></activity>
        <activity android:name=".Activities.MainActivity.MainActivity" />
        <activity android:name=".Activities.ImageDetailActivity" />
        <activity
            android:name=".Activities.Chat.ChatActivity"
            android:theme="@style/chatActivityStyle">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.MainActivity.Fragments.ChatListFragment" />
        </activity>
        <activity
            android:name=".Activities.MainActivity.Fragments.ChatListFragment"
            android:theme="@style/mainActivityStyle"></activity>
        <activity android:name=".Activities.Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>